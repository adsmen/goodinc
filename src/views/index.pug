<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        link(rel="stylesheet", href="./assets/styles/main.css")
        title Document
    body
        include ./mixins/_mixins
        .wrapper
            header.header
                .header__stub
                .header__container
                    .header__logo
                        a(href="/")
                            img(src="./assets/images/header/logo.png", alt="" class="header__logo-img")
                    .header__dropdowns
                        .header__dropdowns-news-container
                            input(type="text" class="header__dropdowns-news" placeholder="Newsletter")
                            +input(true)                        
                        .header__dropdowns-contacts-container
                            input(type="text" class="header__dropdowns-contacts" placeholder="Contact")                        
                            +input(false)
                .header__stub--last
                .header__stub--white
                section.navigation
                    .navigation__logo
                        img(src="./assets/images/header/map.png" class="navigation__logo-img")
                    nav.navigation__container
                        ul.navigation__list
                            li.navigation__item
                                a(href="" class="navigation__item-link") Portfolio
                            li.navigation__item
                                a(href="" class="navigation__item-link") Services
                            li.navigation__item
                                a(href="" class="navigation__item-link") Staff
                            li.navigation__item
                                a(href="" class="navigation__item-link") Articles
                            li.navigation__item
                                a(href="" class="navigation__item-link") Contact
                    .links
                        ul.links__list
                            li.links__item.links__item 
                                a(class="links__item-nav" href="#") QuickLinks 
                                    img(src="./assets/images/header/map.png", class="links__item-img")
                            li.links__item
                                .arrow
                                    input(type="text" class="links__item-input" placeholder="Select from dropdown" readonly)                            
                                    span.arrow__up <
                                    span.arrow__down >
            section.find
                .find__inputs
                    input(type="text" class="find__inputs-input" placeholder="Search for somthing here")
                    img(src="./assets/images/clock_.svg", alt="" class="find__inputs-img")
                .find__socials
                    ul.find__socials-list
                        li.find__socials-item
                            a(href="" class="find__socials-nav")
                        li.find__socials-item
                            a(href="" class="find__socials-nav")
                        li.find__socials-item
                            a(href="" class="find__socials-nav")
                        li.find__socials-item
                            a(href="" class="find__socials-nav")